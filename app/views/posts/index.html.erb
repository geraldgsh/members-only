

<div class="container">
<div class="float-right">
  <% if signed_in? %>
  <a class="button is-link is-light" data-method="delete" href="/signout"><%="(#{current_user.name})" %> Sign out</a>
  <% else %>
    <%= link_to 'Sign in', signin_path, { :class=>"button is-link is-light" } %>
  <% end %>
</div>

<div class="columns">
  <div class="column"></div>
  <div class="column"><h3 class="title is-3">Members Only Posts</h3></div>
  <div class="column"></div>
  
</div>


<% @posts.each do |post| %>
<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-64x64">
        <%= image_tag "images.png" %>
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
      <% if signed_in? %>
        <h4><%=post.title %></h4><br>
        <p>
          <strong>Posted by: <%= post.user.name %></strong> 
          <br>
          <%= post.body %>
        </p>

        <% else %>
        <h4><%=post.title %></h4><br>
        <p>
          <%= post.body %>
        </p>

        <% end %> 
      </div>
      
    </div>
  </article>
</div>
<% end %>
<% if signed_in? %>
  <%= link_to "Create a Post", new_post_path,  { :class=>"button is-link is-light" } %>
<% end %>
</div>